<p style="color: green"><%= notice %></p>
<%if current_user%>
<%= link_to "Logout", destroy_user_session_path, method: :delete %>
<%else%>
<%= link_to "Login", new_user_session_path %>
<%end%>
<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
